/**app.wxss**/
page {
  background-color: #f1f5f8;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.line_vertical {
  width: 1rpx;
  height: 100%;
  background-color: #F1F5F8;
}

.line_horizontal {
  width: 100%;
  height: 1rpx;
  background-color: #F1F5F8;
}

.tab_container {
  height: 100rpx;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0.5rpx;
}

.tab_title_container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab_title {
  height: 100%;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #A2A3A3;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab_title_selected {
  height: 100%;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 4rpx solid #5C5C5C;
}

.icon_more {
  width: 16rpx;
  height: 32rpx;
}

.submit_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: #6EC7FF;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.hover_def {
  opacity: 0.4;
}