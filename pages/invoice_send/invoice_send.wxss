/* pages/invoice_send/invoice_send.wxss */

.top_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.top_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.top_add {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.top_more {
  width: 10rpx;
  height: 20rpx;
  margin-left: 9rpx;
}

.item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  background: #FFFFFF;
  padding: 0 30rpx 0 30rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  width: 160rpx;
}

.item_desc {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
}

.item_input {
  flex: 1;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_checkbox {
  width: 30rpx;
  height: 30rpx;
}

.item_checkbox_title {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-left: 10rpx;
}

.item_price {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}