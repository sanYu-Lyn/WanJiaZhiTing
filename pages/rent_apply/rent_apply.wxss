/* pages/rent_apply/rent_apply.wxss */

.address {
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.address_container {
  height: 100%;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.address_title {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.address_detail {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A4A4;
  margin-top: 5rpx;
}

.address_arrow {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.date {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.date_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.date_content {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-top: 15rpx;
}

.item_container {
  padding: 26rpx 30rpx 25rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
}

.item_title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_content {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_content_detail {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A4A4;
  margin-right: 20rpx;
}

.item_content_arrow {
  width: 16rpx;
  height: 32rpx;
}

.item_content_price {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  margin-left: 50rpx;
  color: #5C5C5C;
}

.notice_container {
  width: 100%;
  margin-bottom: 160rpx;
  background-color: white;
  padding-top: 30rpx;
  padding-bottom: 38rpx;
}

.notice_title {
  font-size: 30rpx;
  margin-left: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.notice_content_container {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.notice_content_image {
  width: 224rpx;
  height: 145rpx;
}

.notice_content_desc {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A4A4;
}

.notice_text {
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  margin-top: 8rpx;
}

.pay_container {
  display: flex;
  flex-direction: row;
  background-color: white;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.pay_checkbox {
  display: flex;
  height: 100%;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  flex: 3;
  background-color: #F8FCFF;
  align-items: center;
}

.pay_btn {
  display: flex;
  height: 100%;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #6EC8FF;
  flex: 2;
  align-items: center;
  justify-content: center;
}

.pay_checkbox_img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}

.pay_checkbox_titile {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-left: 20rpx;
}

.board_container {
  display: flex;
  height: 300rpx;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: center;
  align-content:space-around;
}

.month_container {
  width: 28%;
  height: 120rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #5C5C5C;
  font-family: Microsoft YaHei;
  color: #5C5C5C;
}

.month_container_selected {
  width: 28%;
  height: 120rpx;
  background: #FFFFFF;
  border: 4rpx solid #6EC7FF;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #6EC7FF;
}