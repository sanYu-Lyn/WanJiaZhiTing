.root {
  display: flex;
  flex-direction: column;
}

.item_container {
  background: #FFFFFF;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 10rpx 0px rgba(105, 144, 168, 0.1);
  padding: 20rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.text_address {
  font-size: 24rpx;
  color: #A2A3A3;
  font-family: Microsoft YaHei;
}

.hor {
  display: flex;
  flex-direction: row;
}