/* pages/me_invoice/me_invoice.wxss */

.top_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 0 30rpx;
  margin-top: 110rpx;
}

.top_left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.top_image {
  width: 30rpx;
  height: 30rpx;
}

.top_text {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-left: 10rpx;
}

.top_add {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_container {
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 10rpx 0px rgba(105, 144, 168, 0.1);
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 16rpx;
}

.item_image {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
}

.item_content {
  flex: 4;
  padding-right: 30rpx;
}

.item_price {
  flex: 1;
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.item_subtitle {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-top: 4rpx;
  word-break: break-all;
}

.item_invoice_image {
  width: 140rpx;
  height: 140rpx;
}

.next {
  display: flex;
  height: 100rpx;
  width: 100%;
  background: #FFFFFF;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
}