.title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin: 30rpx 0 0 30rpx;
}

.item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.item_image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.item_content {
  height: 150rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 0px rgba(89, 114, 240, 0.1);
  border-radius: 30rpx;
  font-size: 60rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  display: flex;
  width: 100%;
  margin-right: 88rpx;
  align-items: center;
  justify-content: center;
}