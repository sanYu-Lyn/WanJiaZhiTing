/* search/search.wxss */
page {
  background-color: white;
}

.search_input_container {
  height: 80rpx;
  background: white;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  padding: 30rpx;
}


.search_input_content {
  height: 100%;
  background: #F1F5F8;
  border-radius: 40px;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.search_detail_container {
  position: absolute;
  width: 100%;
  top: 140rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.search_image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 33rpx;
}

.search_text {
  font-size: 18px;
  font-family: Microsoft YaHei;
  font-weight: 300;
  margin-left: 20rpx;
  color: #5C5C5C;
}

.result_line {
  width: 100%;
  height: 2rpx;
  background: #F1F5F8;
}

.result_container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.result_target {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.result_target_image {
  width: 43rpx;
  height: 43rpx;
}

.result_target_text {
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  margin-top: 15rpx;
  color: #6EC7FF;
}

.result_detail {
  flex: 6;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0 30rpx 30rpx;
}

.result_item_title {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  height: 100%;
}

.result_item_address {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  height: 100%;
  margin-top: 15rpx;
}

.result_item_data {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #A2A3A3;
  height: 100%;
  margin-top: 15rpx;
}