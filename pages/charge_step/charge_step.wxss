.root {
  display: flex;
  flex-direction: column;
}

.item_container {
  background: #FFFFFF;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 10rpx 0px rgba(105, 144, 168, 0.1);
  padding: 20rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.sercice_fee {
  font-size: 24rpx;
  color: #A2A3A3;
  font-family: Microsoft YaHei;
}

.hor {
  display: flex;
  flex-direction: row;
}

.rent_container {
  width: 100%;
  height: 80rpx;
  background-color: white;
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.rent_item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.rent_item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.rent_item_desc {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  margin-right: 10rpx;
}


.charge_start {
  background: #0ED16B;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  display: flex;
  padding: 8rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #ffffff;
}

.charge_end {
  background: red;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  display: flex;
  padding: 8rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #ffffff;
}