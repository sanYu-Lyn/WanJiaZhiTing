/* pages/me_center/me_center.wxss */

.profile_container {
  height: 200rpx;
  background: #FFFFFF;
  padding: 30rpx 30rpx 0 30rpx;
}

.profile_login_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.profile_bind {
  display: flex;
  flex-direction: row;
  align-items: center
}

.profile_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.profile_name {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.profile_id {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  margin-top: 4rpx;
  color: #A2A3A3;
}

.profile_home {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.score_container {
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 0px rgba(105, 144, 168, 0.1);
  border-radius: 20rpx;
  position: absolute;
  top: 170rpx;
  right: 60rpx;
  left: 60rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.score_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.score_number {
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.score_desc {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-top: 13rpx;
}

.item_container {
  height: 80rpx;
  background: #FFFFFF;
  padding: 0 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.item_left {
  display: flex;
  flex-direction: row;
}

.item_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}