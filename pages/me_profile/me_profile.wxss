/* pages/me_profile/me_profile.wxss */

.item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 30rpx 25rpx 30rpx;
  background-color: white;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.item_content {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-right: 30rpx;
}

.logout {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 100%;
  background-color: white;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  bottom: 0;
}

.address_picker {
  width: 100%;
  height: 600rpx;
  background-color: black;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}