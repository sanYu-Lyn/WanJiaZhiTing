page {
  width: 100%;
  height: 100%;
}

.root {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.item_account {
  background: #FFFFFF;
  flex: 0;
}

.item_container {
  background: #FFFFFF;
  margin: 30rpx 30rpx 0 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 0px rgba(105, 144, 168, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.text_address {
  font-size: 24rpx;
  color: #A2A3A3;
  font-family: Microsoft YaHei;
}

.hor {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.button_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.button_goto {
  flex: 1;
  display: flex;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  align-items: center;
  justify-content: center;
  color: #6EC8FF;
}

.button_detail {
  flex: 1;
  display: flex;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  align-items: center;
  justify-content: center;
  color: #72777b;
}

.status {
  font-size: 22rpx;
  display: flex;
  align-items: center;
  padding-left: 12rpx;
  padding-right: 12rpx;
  background-color: #0ED16B;
  color: white;
  border-radius: 12rpx;
  font-family: Microsoft YaHei;
}

.done {
  font-size: 22rpx;
  display: flex;
  align-items: center;
  padding-left: 12rpx;
  padding-right: 12rpx;
  color: #A2A3A3;
  border-radius: 12rpx;
  border: 12rpx #A2A3A3 1rpx;
  font-family: Microsoft YaHei;
}