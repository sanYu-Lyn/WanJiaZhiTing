/* pages/map/map.wxss */
page {
  width: 100%;
  height: 100%;
}

.root {
  background-color: bisque;
  width: 100%;
  height: 100%;
  position: absolute;
}

.map {
  width: 100%;
  height: 100%;
}

.locate {
  background-color: white;
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 620rpx;
  left: 30rpx;
  border-radius: 80rpx;
  box-shadow: 0rpx 0rpx 8rpx #e6e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.locate_img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
}


.search {
  height: 130rpx;
  background-color: white;
  border-radius: 30rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 8rpx #e6e0e0;
  padding: 25rpx 30rpx 25rpx 30rpx;
  position: absolute;
  bottom: 460rpx;
  left: 40rpx;
  right: 40rpx;
}

.tab {
  width: 100%;
  position: absolute;
  height: 393rpx;
  bottom: 31rpx;
}

.swiper {
  height: 100%;
}

.swiper_item {
  background-color: white;
  display: flex;
  width: 95%;
  height: 100%;
  flex-direction: column;
  border-radius: 20rpx;
  box-sizing: border-box;
  margin-left: 10rpx;
  margin-right: 10rpx;
  box-shadow: 0rpx 0rpx 8rpx #e6e0e0;
}

.card_center {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #F8FCFF;
  margin-top: 30rpx;
  padding: 13rpx 0 13rpx 0;
}

.card_center_cell {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card_center_cell_detail {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card_bottom {
  display: flex;
  flex: 1;
  flex-direction: row;
}

.card_btn {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.line {
  width: 1rpx;
  background-color: #F1F5F8;
}

.title_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 18rpx 0 0 42rpx;
}

.text_title {
  max-width: 70%;
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.title_mark {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.text_address {
  font-size: 24rpx;
  color: #A2A3A3;
  margin: 4rpx 0 0 42rpx;
  font-family: Microsoft YaHei;
  max-width: 90%;
}

.text_count {
  font-size: 48rpx;
  color: red;
  font-family: Microsoft YaHei;
  margin: 0;
  padding: 0;
}

.text_empty {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #B0C0CA;
}

.text_unit {
  font-size: 24rpx;
  color: #A2A3A3;
  margin-left: 2rpx;
}

.text_desc {
  font-size: 24rpx;
  color: #A2A3A3;
  margin-top: 10rpx;
}

.search_input {
  display: flex;
  flex-direction: row;
  background-color: #F1F5F8;
  border-radius: 80rpx;
  box-sizing: border-box;
  height: 100%;
  align-items: center;
}

.search_text {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  margin-left: 20rpx;
}

.search_image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}

.map_center_anchor {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -22rpx;
  margin-top: -74rpx;
  width: 44rpx;
  height: 74rpx;
}