/* pages/car_brand/car_brand.wxss */

.gird_container {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 300rpx;
  position: fixed;
  background-color: white;
}

.gird_item {
  flex: 0 0 auto;
  width: 14.2857%;
  text-align: center;
  color: #797979;
  font-size: 30rpx;
}

.list_container {
  position: absolute;
  top: 300rpx;
  background-color: white;
  width: 100%;
}

.list_title {
  width: 100%;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  background-color: #F1F5F8;
  height: 60rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.list_item_container {
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 100%;
  height: 100rpx;
  align-items: center;
  padding-left: 30rpx;
}

.list_item_txt {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.list_item_img {
  width: 40rpx;
  height: 40rpx;
}