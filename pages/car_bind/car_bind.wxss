/* pages/fee/fee.wxss */

.color_title {
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.color_container {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
  justify-content: space-between;
  background-color: white;
  padding-bottom: 20rpx;
}

.color_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  margin-top: 20rpx;
  width: 25.1%;
  text-align: center;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  box-sizing: border-box;
  color: black;
  border-radius: 30rpx;
  border: 1px solid transparent;
}

.numner_container {
  display: flex;
  width: 100%;
  height: 140rpx;
  flex-direction: row;
  background-color: white;
  align-items: center;
  margin-top: 30rpx;
}

.number_item {
  margin-left: 30rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1rpx solid #A3A3A4;
  font-size: 30px;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.green_block {
  margin-left: 30rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #A3A3A4;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  -webkit-writing-mode: vertical-rl;
  writing-mode: vertical-rl;
}

.text_tips {
  font-size: 24rpx;
  color: #A2A3A3;
  font-family: Microsoft YaHei;
  margin-left: 6rpx;
}

.title_image {
  width: 30rpx;
  height: 24rpx;
  margin-top: 8rpx;
}