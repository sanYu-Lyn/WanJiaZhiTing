/* pages/charge_list/charge_list.wxss */

.root {
  display: flex;
  flex-direction: column;
}

.item_container {
  background: #FFFFFF;
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 10rpx 0px rgba(105, 144, 168, 0.1);
  padding: 20rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.text_address {
  font-size: 24rpx;
  color: #A2A3A3;
  font-family: Microsoft YaHei;
}

.hor {
  display: flex;
  flex-direction: row;
}

.status {
  font-size: 28rpx;
  color: #0ED16B;
  font-family: Microsoft YaHei;
  margin-left: 12rpx;
}

.type {
  font-size: 20rpx;
  background-color: #0ED16B;
  font-family: Microsoft YaHei;
  color: white;
  border-radius: 6rpx;
  padding: 0rpx 10rpx;
  margin-left: 12rpx;
}

.button_detail {
  flex: 1;
  display: flex;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  align-items: center;
  justify-content: center;
  color: #72777b;
}