.top_container {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-end;
}

.top_title {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  margin: 30rpx;
}

.item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: white;
  padding: 0 30rpx 0 30rpx;
}

.item_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.item_image {
  width: 110rpx;
  height: 80rpx;
}