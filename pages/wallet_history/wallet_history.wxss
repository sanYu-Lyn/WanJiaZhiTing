/* pages/wallet_history/wallet_history.wxss */

.item_container {
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 0px rgba(105, 144, 168, 0.1);
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 30rpx;
  padding: 20rpx;
}

.item_top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.item_txt_type {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.item_txt_price {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.item_txt_date {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
}

.item_txt_money {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
}