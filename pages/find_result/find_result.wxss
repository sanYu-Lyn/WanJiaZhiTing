/* pages/find_result/find_result.wxss */

.title {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin: 30rpx 0 0 30rpx;
}

.car_container {
  margin: 30rpx 75rpx 0 75rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 0px rgba(105, 144, 168, 0.1);
  border-radius: 20rpx;
  padding-bottom: 30rpx;
}

.car_image {
  width: 100%;
  height: 341rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.car_title {
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  margin: 15rpx 30rpx 0 30rpx;
}

.car_address {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  margin: 4rpx 30rpx 4rpx 30rpx;
}

.car_location {
  margin: 0 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.car_subtitle {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.car_detail {
  font-size: 60rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.car_result_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.car_result_img {
  width: 302rpx;
  height: 325rpx;
  margin-top: 100rpx;
}

.car_result_desc {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
}

.refresh_btn {
  width: 400rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}