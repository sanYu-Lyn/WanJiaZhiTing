/* pages/car_complain/car_complain.wxss */

.top_container {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.top_step {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #E2E6EA;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #A2A3A3;
}

.top_line {
  width: 120rpx;
  height: 8rpx;
  background: #E2E6EA;
}

.top_step_text {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.card_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0 35rpx 0;
  background-color: white;
  margin-top: 40rpx;
}

.card {
  width: 447rpx;
  height: 289rpx;
}

.card_text {
  margin-top: 9rpx;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
}

.notice_txt {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
  margin-left: 30rpx;
}