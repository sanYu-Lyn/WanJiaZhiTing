/* pages/base_login/base_login.wxss */
page {
  background-color: white;
}

.root {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 110rpx;
  height: 120rpx;
  margin-top: 455rpx;
}

.name {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
  margin-top: 18rpx;
}

.input_container {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  height: 100rpx;
}

.input_title {
  width: 140rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin-left: 40rpx;
}

.input_hint {
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #A2A3A3;
}

.input_text {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #5C5C5C;
}

.btn_code {
  width: 180rpx;
  height: 50rpx;
  border: 1rpx solid #5C5C5C;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 40rpx;
}

.btn_login {
  width: 400rpx;
  height: 80rpx;
  background: #6EC7FF;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.btn_wx {
  width: 400rpx;
  height: 80rpx;
  background: #2DC100;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.btn_hint {
  height: 80rpx;
  position: absolute;
  top: 100rpx;
  opacity: 0;
}

.btn_phone_hint {
  height: 80rpx;
  position: absolute;
  top: 30rpx;
  opacity: 0;
}

.dialog_root {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #00000044;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.dialog_container {
  width: 630rpx;
  background: #FFFFFF;
  border-radius: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.dialog_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #5C5C5C;
  margin: 40rpx 0 40rpx 0;
}

.dialog_phone {
  width: 400rpx;
  height: 80rpx;
  background: #2DC100;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog_check {
  width: 20rpx;
  height: 20rpx;
}

.dialog_check_agreement {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.dialog_check_text {
  font-size: 22rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #A2A3A3;
  margin-left: 10rpx;
}

.dialog_close {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  padding: 30rpx;
  right: 0;
  top: 0;
}